<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/wikidataIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wikidata_id_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/secondary_color"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/wikidataId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="?attr/primary_color"
                android:layout_marginBottom="24dp"
                tools:text="Q12345" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wikidata_title_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/secondary_color"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/wikidataTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="?attr/primary_color"
                android:layout_marginBottom="24dp"
                tools:text="Example Title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wikidata_description_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/secondary_color"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/wikidataDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="?attr/primary_color"
                android:layout_marginBottom="24dp"
                tools:text="This is a description" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/aliasesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wikidata_aliases_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/secondary_color"
                android:layout_marginBottom="4dp"
                android:visibility="gone" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/aliasesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="?attr/primary_color"
                android:visibility="gone"
                tools:text="• Alias 1\n• Alias 2\n• Alias 3" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
